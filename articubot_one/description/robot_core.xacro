<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
<xacro:include filename="inertial_macros.xacro" />
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">
    </link>
    <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0 0 0.1"/>
    </joint>
    <link name="chassis">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename = "file://$(find articubot_one)/description//robodae/body.dae" scale = "1 1 1"/>
        </geometry>
        <material name="white"/>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename = "file://$(find articubot_one)/description//robodae/body.dae" scale = "1 1 1"/>
        </geometry>
    </collision>
    <xacro:inertial_box mass="50" x="0.50" y="0.50" z="0.20">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
    </link>
    <gazebo reference="chassis">
    <material>Gazebo/White</material>
    </gazebo>
    
    <!-- 1 WHEEL -->
    <joint name="1_joint" type="continuous">
        <parent link="base_link"/> 
        <child link="1"/> 
        <origin xyz="0.15 0.23 0" rpy="0 0 ${pi/2}"/>
        <axis xyz="1 0 0"/> 
    </joint>
    <link name="1"> 
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/wheel.dae" scale = "1 1 1"/>
            </geometry>
           
        </visual>
        <collision> 
            <origin xyz="0 0 0" rpy="0 0 0"/> 
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/wheel.dae" scale = "1 1 1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="20" length="0.04" radius="0.05"> 
            <origin xyz="0 0 0" rpy="0 0 ${pi/2}"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="1">
        <material>Gazebo/Blue</material>
        <mu1 value="0.8"/>
        <mu2 value="0.8"/>
    </gazebo>

    <!-- 2 WHEEL -->
    <joint name="2_joint" type="continuous">
        <parent link="base_link"/> 
        <child link="2"/> 
        <origin xyz="-0.15 0.23 0" rpy="0 0 ${pi/2}"/>
        <axis xyz="1 0 0"/> 
    </joint>
    <link name="2"> 
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/wheel.dae" scale = "1 1 1"/>
            </geometry>
            <material name="blue"/> 
        </visual>
        <collision> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/wheel.dae" scale = "1 1 1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="20" length="0.04" radius="0.05"> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="2">
        <material>Gazebo/Blue</material>
        <mu1 value="0.8"/>
        <mu2 value="0.8"/>
    </gazebo>
    <!-- 3 WHEEL -->
    <joint name="3_joint" type="continuous">
        <parent link="base_link"/> 
        <child link="3"/> 
        <origin xyz="0.15 -0.23 0" rpy="0 0 ${pi/2}"/>
        <axis xyz="1 0 0"/> 
    </joint>
    <link name="3"> 
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/wheel.dae" scale = "1 1 1"/>
            </geometry>
            <material name="blue"/> 
        </visual>
        <collision> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/wheel.dae" scale = "1 1 1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="10" length="0.04" radius="0.05"> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="3">
        <material>Gazebo/Blue</material>
        <mu1 value="0.8"/>
        <mu2 value="0.8"/>
    </gazebo>

    <!-- 4 WHEEL -->
    <joint name="4_joint" type="continuous">
        <parent link="base_link"/> 
        <child link="4"/> 
        <origin xyz="-0.15 -0.23 0" rpy="0 0 ${pi/2}"/>  
        <axis xyz="1 0 0"/> 
    </joint>
    <link name="4"> 
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/> 
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/wheel.dae" scale = "1 1 1"/>
            </geometry>
            <material name="blue"/> 
        </visual>
        <collision> 
            <origin xyz="0 0 0" rpy="0 0 0"/> 
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/wheel.dae" scale = "1 1 1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="10" length="0.04" radius="0.05"> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="4">
        <material>Gazebo/Blue</material>
        <mu1 value="0.8"/>
        <mu2 value="0.8"/>
    </gazebo>
    <!-- POLE -->
    <joint name="pole_joint" type="fixed">
        <parent link="base_link"/> 
        <child link="pole"/> 
        <origin xyz="0 0 0.4" rpy="${pi/2} 0 0"/> 
        <axis xyz="1 0 0"/> 
    </joint>
    <link name="pole"> 
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/pole.dae" scale = "1 1 1"/>
            </geometry>
            <material name="blue"/> 
        </visual>
        <collision> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/pole.dae" scale = "1 1 1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.075" radius="0.15"> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="pole">
        <material>Gazebo/Blue</material>
        <mu1 value="0.8"/>
        <mu2 value="0.8"/>
    </gazebo>
    <!-- BEAM -->
    <joint name="beam_joint" type="prismatic">
        <parent link="pole"/> 
        <child link="beam"/> 
        <origin xyz="0 0.07 0.07" rpy="0 -${pi/2} 0"/> 
        <axis xyz="0 1 0"/> 
        <limit lower="-0.19" upper="0.16" velocity="0.1" effort="100" />
        <dynamics damping="6" friction="15"/>

    </joint>
    <link name="beam"> 
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/beam.dae" scale = "1 1 1"/>
            </geometry>
            <material name="blue"/> 
        </visual>
        <collision> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/beam.dae" scale = "1 1 1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.075" radius="0.15"> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="beam">
        <material>Gazebo/Green</material>
        <mu1 value="0.8"/>
        <mu2 value="0.8"/>
    </gazebo>
    <!-- CAMERA -->
    <joint name="camera_joint" type="revolute">
        <parent link="beam"/> 
        <child link="camera"/> 
        <origin xyz="0.055 0.055 0" rpy="0 ${pi/2} 0"/> 
        <axis xyz="1 0 0"/> 
        <limit lower="0" upper="${pi/3}" velocity="0.1" effort="100" />
        <dynamics damping="1" friction="0.01"/>

    </joint>
    <link name="camera"> 
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/camera.dae" scale = "1 1 1"/>
            </geometry>
            <material name="Pink"/> 
        </visual>
        <collision> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename = "file://$(find articubot_one)/description//robodae/camera.dae" scale = "1 1 1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.075" radius="0.15"> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="camera">
        <material>Gazebo/Pink</material>
        <mu1 value="0.01"/>
        <mu2 value="0.01"/>
    </gazebo>
</robot>